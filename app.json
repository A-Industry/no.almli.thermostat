{
  "id": "com.a-industry.pidthermostat",
  "version": "0.0.1",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "PID VThermo"
  },
  "description": {
    "en": "Virtual PID thermostat"
  },
  "category": [
    "tools"
  ],
  "tags": {
    "en": [
      "thermostat",
      "temperature control",
      "heating",
      "virtual"
    ]
  },
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Bart Slootweg",
    "email": "bartslootweg@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Bart Slootweg",
        "email": "bart@a-industry.com"
      },
      {
        "name": "Bj√∏rnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "vt_onoff_true",
        "title": {
          "en": "Thermostat turned on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=PIDVThermo"
          }
        ]
      },
      {
        "id": "vt_onoff_false",
        "title": {
          "en": "Thermostat turned off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=PIDVThermo"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "vt_onoff_is_on",
        "title": {
          "en": "Thermostat is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=PIDVThermo"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "PIDVThermo",
      "name": {
        "en": "PID VThermo"
      },
      "class": "thermostat",
      "capabilities": [
        "onoff",
        "vt_onoff",
        "target_temperature",
        "measure_temperature",
        "pid_value"
      ],
      "capabilitiesOptions": {
        "vt_onoff": {
          "greyout": true,
          "titleTrue": {
            "en": "Active"
          },
          "titleFalse": {
            "en": "Idle"
          }
        },
        "target_temperature": {
          "decimals": 1,
          "min": 1,
          "max": 40,
          "step": 0.5
        }
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "k_p",
              "type": "number",
              "label": {
                "en": "k_p"
              },
              "value": 50
            },
            {
              "id": "k_i",
              "type": "number",
              "label": {
                "en": "k_i"
              },
              "value": 0.2
            },
            {
              "id": "k_d",
              "type": "number",
              "label": {
                "en": "k_d"
              },
              "value": 0
            },
            {
              "id": "plan_length_min",
              "type": "number",
              "label": {
                "en": "Minimal heating plan length (minutes)"
              },
              "value": 10
            },
            {
              "id": "plan_length_max",
              "type": "number",
              "label": {
                "en": "Maximal heating plan length (minutes)"
              },
              "value": 25
            },
            {
              "id": "invert",
              "type": "checkbox",
              "label": {
                "en": "Invert switch"
              },
              "value": false
            },
            {
              "id": "contact_alarm",
              "type": "checkbox",
              "label": {
                "en": "Turn off if contact alarm"
              },
              "value": false
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/PIDVThermo/assets/images/large.png",
        "small": "/drivers/PIDVThermo/assets/images/small.png"
      }
    }
  ],
  "capabilities": {
    "vt_onoff": {
      "type": "boolean",
      "icon": "/drivers/PIDVThermo/assets/images/onoff.svg",
      "noblink": false,
      "greyout": true,
      "label": {
        "true": {
          "en": "Active"
        },
        "false": {
          "en": "Idle"
        }
      },
      "title": {
        "en": "State"
      },
      "desc": {
        "en": "State of the device"
      },
      "getable": true,
      "setable": false
    },
    "pid_value": {
      "type": "number",
      "title": {
        "en": "PID value"
      },
      "uiComponent": "slider",
      "getable": true,
      "setable": false,
      "units": {
        "en": "min"
      },
      "desc": {
        "en": "Calculated minutes per hour of heating required."
      },
      "min": 0,
      "max": 100,
      "decimals": 1
    }
  }
}
