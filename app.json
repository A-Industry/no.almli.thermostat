{
  "id": "no.almli.thermostat",
  "version": "0.0.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "VThermo"
  },
  "description": {
    "en": "Virtual thermostat"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Bjørnar Almli",
    "email": "bjornar.almli@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Bjørnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "vt_mode_changed",
        "title": {
          "en": "Thermostat mode has changed"
        },
        "tokens": [
          {
            "name": "mode",
            "title": {
              "en": "Mode"
            },
            "example": {
              "en": "Comfort"
            }
          },
          {
            "name": "modeName",
            "title": {
              "en": "Name"
            },
            "example": {
              "en": "Comfort"
            }
          }
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      },
      {
        "id": "vt_mode_changed_to",
        "title": {
          "en": "Thermostat mode has changed to"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=VThermo"
          },
          {
            "name": "vt_mode",
            "title": {
              "en": "Mode"
            },
            "type": "dropdown",
            "values": [
              {
                "id": "Comfort",
                "label": {
                  "en": "Comfort"
                }
              },
              {
                "id": "ECO",
                "label": {
                  "en": "Energy Saving"
                }
              },
              {
                "id": "Off",
                "label": {
                  "en": "Off"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "vt_onoff_true",
        "title": {
          "en": "Thermostat turned on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      },
      {
        "id": "vt_onoff_false",
        "title": {
          "en": "Thermostat turned off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "vt_onoff_is_on",
        "title": {
          "en": "Thermostat is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      },
      {
        "id": "vt_mode_is",
        "title": {
          "en": "Thermostat mode !{{is|is not}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          },
          {
            "name": "vt_mode",
            "title": {
              "en": "Mode"
            },
            "type": "dropdown",
            "values": [
              {
                "id": "Comfort",
                "label": {
                  "en": "Comfort"
                }
              },
              {
                "id": "ECO",
                "label": {
                  "en": "Energy Saving"
                }
              },
              {
                "id": "Off",
                "label": {
                  "en": "Off"
                }
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "vt_change_mode",
        "title": {
          "en": "Set the thermostat mode"
        },
        "hint": {
          "en": "Set the thermostat mode (Comfort / Energy Saving / Off) and activate instantly"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=VThermo"
          },
          {
            "name": "vt_mode",
            "title": {
              "en": "Mode"
            },
            "type": "dropdown",
            "values": [
              {
                "id": "Comfort",
                "label": {
                  "en": "Comfort"
                }
              },
              {
                "id": "ECO",
                "label": {
                  "en": "Energy Saving"
                }
              },
              {
                "id": "Off",
                "label": {
                  "en": "Off"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "vt_change_mode_setpoint",
        "title": {
          "en": "Set a setpoint of a thermostat mode"
        },
        "hint": {
          "en": "Change the setpoint of a specific thermostat mode (Comfort / Energy Saving). Note: does NOT activate this mode"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=VThermo"
          },
          {
            "name": "vt_mode",
            "title": {
              "en": "Mode"
            },
            "type": "dropdown",
            "values": [
              {
                "id": "Comfort",
                "label": {
                  "en": "Comfort"
                }
              },
              {
                "id": "ECO",
                "label": {
                  "en": "Energy Saving"
                }
              }
            ]
          },
          {
            "name": "setpointValue",
            "type": "range",
            "min": 5,
            "max": 40,
            "step": 0.5,
            "label": "°C",
            "labelDecimals": 1
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "VThermo",
      "name": {
        "en": "VThermo"
      },
      "class": "thermostat",
      "capabilities": [
        "vt_onoff",
        "target_temperature",
        "vt_mode",
        "measure_temperature"
      ],
      "capabilitiesOptions": {
        "vt_onoff": {
          "greyout": true
        },
        "target_temperature": {
          "decimals": 1,
          "min": 5,
          "max": 40,
          "step": 0.5
        }
      },
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": []
          },
          {
            "id": "sensor",
            "capabilities": [
              "measure_temperature",
              "vt_onoff"
            ],
            "options": {
              "icons": {
                "vt_onoff": "/drivers/VThermo/assets/images/onoff.svg"
              },
              "vt_onoff": {
                "noblink": false,
                "greyout": true,
                "label": {
                  "true": {
                    "en": "On"
                  },
                  "false": {
                    "en": "Off"
                  }
                }
              }
            }
          },
          {
            "id": "picker",
            "capabilities": [
              "vt_mode"
            ]
          },
          {
            "id": "thermostat",
            "capabilities": [
              "target_temperature"
            ]
          }
        ]
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "Comfort_setpoint",
              "type": "number",
              "label": {
                "en": "Comfort mode temperature"
              },
              "value": 21
            },
            {
              "id": "ECO_setpoint",
              "type": "number",
              "label": {
                "en": "Energy saving mode temperature"
              },
              "value": 18
            },
            {
              "id": "hysteresis",
              "type": "number",
              "label": {
                "en": "hysteresis"
              },
              "value": 0.5
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/VThermo/assets/images/large.png",
        "small": "/drivers/VThermo/assets/images/small.png"
      }
    }
  ],
  "capabilities": {
    "vt_mode": {
      "type": "enum",
      "title": {
        "en": "Thermostat mode"
      },
      "desc": {
        "en": "Mode of the thermostat"
      },
      "values": [
        {
          "id": "Comfort",
          "title": {
            "en": "Comfort"
          }
        },
        {
          "id": "ECO",
          "title": {
            "en": "Energy Saving"
          }
        },
        {
          "id": "Off",
          "title": {
            "en": "Off"
          }
        }
      ],
      "getable": true,
      "setable": true
    },
    "vt_onoff": {
      "type": "boolean",
      "title": {
        "en": "State"
      },
      "desc": {
        "en": "State of the thermostat"
      },
      "getable": true,
      "setable": false,
      "greyout": true
    }
  }
}