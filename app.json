{
  "id": "no.almli.thermostat",
  "version": "0.0.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "VThermo"
  },
  "description": {
    "en": "Virtual thermostat"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Bjørnar Almli",
    "email": "bjornar.almli@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Bjørnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "vt_onoff_true",
        "title": {
          "en": "Thermostat turned on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      },
      {
        "id": "vt_onoff_false",
        "title": {
          "en": "Thermostat turned off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      },
      {
        "id": "vt_humidity_changed",
        "title": {
          "en": "Humidity changed"
        },
        "tokens": [
          {
            "name": "humidity",
            "title": {
              "en": "Humidity"
            },
            "example": {
              "en": "35"
            }
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "vt_onoff_is_on",
        "title": {
          "en": "Thermostat is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VThermo"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "VThermo",
      "name": {
        "en": "VThermo"
      },
      "class": "thermostat",
      "capabilities": [
        "vt_onoff",
        "target_temperature",
        "measure_temperature",
        "measure_humidity"
      ],
      "capabilitiesOptions": {
        "vt_onoff": {
          "greyout": true
        },
        "target_temperature": {
          "decimals": 1,
          "min": 5,
          "max": 40,
          "step": 0.5
        }
      },
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": []
          },
          {
            "id": "sensor",
            "capabilities": [
              "measure_temperature",
              "vt_onoff"
            ],
            "options": {
              "icons": {
                "vt_onoff": "/drivers/VThermo/assets/images/onoff.svg"
              },
              "vt_onoff": {
                "noblink": false,
                "greyout": true,
                "label": {
                  "true": {
                    "en": "On"
                  },
                  "false": {
                    "en": "Off"
                  }
                }
              }
            }
          },
          {
            "id": "thermostat",
            "capabilities": [
              "target_temperature"
            ]
          }
        ]
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "hysteresis",
              "type": "number",
              "label": {
                "en": "Hysteresis"
              },
              "value": 0.5
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/VThermo/assets/images/large.png",
        "small": "/drivers/VThermo/assets/images/small.png"
      }
    }
  ],
  "capabilities": {
    "vt_onoff": {
      "type": "boolean",
      "title": {
        "en": "State"
      },
      "desc": {
        "en": "State of the thermostat"
      },
      "getable": true,
      "setable": false,
      "greyout": true
    }
  }
}